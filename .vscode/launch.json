  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/hello_glfw/build/hello_unix.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src/hello_glfw/build",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "preLaunchTask": "build",
      "windows": {
        "type": "cppvsdbg"
      },
      "linux": {
        "type": "cppdbg",
        "MIMode": "gdb",
        "externalConsole": false,
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    }
  ]
}
